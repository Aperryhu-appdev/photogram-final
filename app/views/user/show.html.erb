
  <h1> <%=@user.username %> </h1>


<dl>
  <dt>Private</dt>
  <dd><%=@user.private %></dd>

  <dt>Followers</dt>
  <dd>
    <%=@user.followers.count%>


      <div>
          <form action="/insert_follow_request" method="post">
            <input type="hidden" name="query_recipient_id" value="93">

            <button>
              Follow
            </button>
          </form>
    </div>

  </dd>

  <dt>Following</dt>
  <dd><%=@user.accepted_sent_follow_requests.count%></dd>

</dl>

<nav>
  <ul>
    <li>
      <a href="/users/<%=@user.username%>">Profile</a>
    </li>
    <li>
      <a href="/users/<%=@user.username%>">Liked photos</a>
    </li>
    <li>
      <a href="/users/<%=@user.username%>">Feed</a>
    </li>
    <li>
      <a href="/users/<%=@user.username%>">Discover</a>
    </li>
  </ul>
</nav>


<h2> Own Photos ( <%=@user.own_photos.count%>) </h2>

<table border = "1">

<tr>
  <th>Image</th>
  <th>Owner</th>
  <th>Caption </th>
  <th>Posted</th>
  <th>Likes</th>
  <th> </th>
</tr>

<% @user.own_photos.each do |a_photo|%>
<tr>
  <td>
  <img src ="<%= a_photo.image %>">
  </td>
  <td>
  <%#=User.where({:id => a_photo.owner_id }).at(0).username %>
  <%= a_photo.poster.username%>
  </td>
  <td><%= a_photo.caption %></td>
  <td><%= a_photo.created_at %></td>
  <td><%= a_photo.likes_count %></td>
  <td><a href="/photos/<%a_photo.id%>">Show Details</td>
</tr>
<% end %>
</table>

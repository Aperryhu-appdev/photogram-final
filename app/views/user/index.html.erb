
<hr>



<h1>List of users</h1>

<hr>

<table border="1">
  <tr>
    <th>
      Username
    </th>

    <th>
      Private?
    </th>

    <th></th>
   <th>
    Show Details
    </th>
    
  </tr>

  <% @users.each do |user| %>
  <tr>
    <td>
      <%= user.username %>
    </td>

    <td>
      <% if user.private == false %>
        <%= "No" %>

      <% else %>

       <%= "Yes" %>

      <%end%>

    </td>

    <td> 
    <%if @current_user == nil%>
      <%= %>
    <% else %>
      <form action="/insert_follow_request" method="post">
        <button>
          Follow
        </button>
      </form>
    <%end%>
    </td>

    <td>
      <a href="/users/<%= user.username%>">Show details</a>
    </td>
  </tr>
  
  <% end %>
</table>
